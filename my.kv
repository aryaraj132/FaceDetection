WindowManager:
    AttendenceWindow:
    DatasetWindow:
<Button>:
    font_size:15
    color:1,0.6,0.7,1
    background_color: 0.3,0.4,0.5,1

<Label>:
    font_size:15
    color:1,0.6,0.7,1
    pos_hint:{"x":0}
    size_hint: 0.25,0.05
    background_color: 0.3,0.4,0.5,1
    valign : "middle"
    halign : "center"

<TextInput>:
    font_size:15
    color:1,0.6,0.7,1
    pos_hint:{"x":0.5}
    size_hint: 0.7,0.05

<AttendenceWindow>:
    name: "main"

    FloatLayout:

        Button:
            text:"Attendance"
            on_release: app.root.current = "main"
            pos_hint:{"x":0,"top":1}
            size_hint: 0.33,0.10
        Button:
            text:"Train Faces"
            pos_hint:{"x":0.335,"top":1}
            size_hint: 0.33,0.10
            on_press : 
                app.train(info)
        Button:
            text:"Load Face"
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
            pos_hint:{"x":0.67,"top":1}
            size_hint: 0.33,0.10
        
        Label:
            text:"Enter User ID: "
            pos_hint:{"x":0,"top":0.665}

        TextInput:
            id:user_id
            multiline:False
            pos_hint:{"x":0.3,"top":0.665}
            
        Button:
            text : "Mark Attendance"
            pos_hint:{"x":0.025,"top":0.3}
            size_hint: 0.95,0.10
            on_press : app.Attendence(user_id.text,info)
        Label:
            id:info
            text: ""
            pos_hint:{"x":0.25,"top":0.1}

<DatasetWindow>:
    name: "second"
    FloatLayout:

        Button:
            text:"Attendance"
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"
            pos_hint:{"x":0,"top":1}
            size_hint: 0.33,0.10
        Button:
            text:"Train Faces"
            pos_hint:{"x":0.335,"top":1}
            size_hint: 0.33,0.10
            on_press : app.train(info)
        Button:
            text:"Load Face"
            on_release: app.root.current = "second"
            pos_hint:{"x":0.67,"top":1}
            size_hint: 0.33,0.10
        
        Label:
            text:"Enter User ID: "
            pos_hint:{"x":0,"top":0.665}

        TextInput:
            id:user_id
            multiline:False
            pos_hint:{"x":0.3,"top":0.665}
            
        Button:
            text : "Load Face"
            pos_hint:{"x":0.025,"top":0.3}
            size_hint: 0.95,0.10
            on_press : app.dataset(user_id.text,info)
        Label:
            id:info
            text: ""
            pos_hint:{"x":0.25,"top":0.1}